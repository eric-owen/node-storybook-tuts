<h1>Stories</h1>
<div class='row'>
    {{#each stories}}
        <div class='col s12-m4'>
            <div class='card-image'>

            </div>
            <div class='card-conent center-align'>
                <h5>{{title}}</h5>
                <p>{{body}}</p>
                <br />
                <div class='chip'>
                    <img src='{{user.image}}' alt='' />
                    <a
                        href='/stories/user/{{user._id}}'
                    >{{user.displayName}}</a>
                </div>
            </div>
            <div class='card-action center-align'>
                <a href='/stories/{{_id}}' class='btn great'>Read More</a>
            </div>
        </div>
    {{else}}
        <p>No public stories</p>
    {{/each}}
</div>